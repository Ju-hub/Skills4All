{% extends 'base.html.twig' %}

{% block title %}Cars : list {% endblock %}

{% block body %}
<div class="text-end">
        <img src="{{ icon }}" alt="icon_weather">
        <p> <strong> {{api.current_weather.temperature}} °C </strong></p>
</div>

<div class="d-flex my-5">
        <div class="col-md-2 mx-3">
                    {{ form_start(form) }}
                    {{ form_row(form.search) }}
                    <h4>Categories</h4>
                    {{ form_row(form.categories) }}
                    
                    <div class="row">
                    <h4>Price €</h4>
                        <div class="col-md-6"> {{ form_row(form.min)   }}</div>
                        <div class="col-md-6">{{ form_row(form.max) }}</div>
                    </div>
                    
                    <button type="submit" class='btn btn-warning w-100'>Filtrer</button>
                    {{ form_end(form) }}
        </div>  
        <div class="col-md-10 d-flex flex-wrap ">
            {% for car in list_cars %}
                
                <div class="card mx-2 my-1 align-items-center" style="width: 12rem;background:lightgray;max-height:400px">
                        
                        <img src="" class="card-img-top" style="min-height:200px; min-width:100px " alt="image_car">
                        <div class="card-body w-100" style="max-height:250px">
                            <h5 class="card-title">{{ car.name }}</h5>
                            <p class="card-text">Some quick ....</p>
                            <h5 class="text-end font-weight-bold">{{car.cost}} €</h5>
                            
                        </div>
                    
                </div>
                
            {% else %}
                <div class="mx-auto mt-3">
                    <p>Aucun résultat touvé.</p>
                </div>
            {% endfor %}
        </div>    
        
</div>  
    {# Mise en place de la pagination #}
    <div class="container">
        <div class="d-flex justify-content-center">
            {% do list_cars.setPageRange(2) %}
            {{ knp_pagination_render(list_cars, 'pagination.html.twig') }}
        </div>
    </div>
{% endblock %}

